doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    title App
    link(rel='stylesheet', href='/css/app.css')
    link(rel='shortcut icon', type='image/ico', href='/favicon.ico')
    if (build)
      script(src='/js/main.js', async)
    else
      script(src='/js/lib/require.js', data-main='/js/main', async)
  body
    .switchSlide
      .widgetSlide
        label(for='nao') Não
        input#nao(type='radio', title='Não', name='switch', value='N')
        label(for='sim') Sim
        input#sim(type='radio', title='Sim', name='switch', value='S')

    .switchSlide
      .widgetSlide
        label(for='bad') Bad
        input#bad(type='radio', title='Bad', name='switch', value='bad')
        label(for='good') Good
        input#good(type='radio', title='Good', name='switch', value='good', checked)
